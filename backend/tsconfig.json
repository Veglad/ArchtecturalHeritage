{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es6"],
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "outDir": "build",
        "esModuleInterop": true,
        "sourceMap": true,
        "removeComments": true,
        "target": "es6",
        "moduleResolution": "node",
        "importHelpers": true,
        "types": [
            "node",
            "mocha"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
}